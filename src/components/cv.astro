<div class="cv-container">
  <header class="cv-header">
    <h1>{/* Name */}</h1>
    <p>{/* Contact Information */}</p>
  </header>

  <section class="cv-summary">
    <h2>Professional Summary</h2>
    <p>{/* Brief summary placeholder */}</p>
  </section>

  <section class="cv-experience">
    <h2>Work Experience</h2>
    <div class="job">
      <h3>{/* Job Title */}</h3>
      <p>{/* Company, Dates */}</p>
      <ul>
        <li>{/* Responsibility 1 */}</li>
        <li>{/* Responsibility 2 */}</li>
      </ul>
    </div>
    {/* Add more job entries as needed */}
  </section>

  <section class="cv-education">
    <h2>Education</h2>
    <div class="education-item">
      <h3>{/* Degree */}</h3>
      <p>{/* Institution, Dates */}</p>
    </div>
    {/* Add more education entries as needed */}
  </section>

  <section class="cv-skills">
    <h2>Skills</h2>
    <ul>
      <li>{/* Skill 1 */}</li>
      <li>{/* Skill 2 */}</li>
    </ul>
  </section>
</div>

<style>
  .cv-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  .cv-header {
    text-align: center;
    margin-bottom: 20px;
  }
  .cv-summary,
  .cv-experience,
  .cv-education,
  .cv-skills {
    margin-bottom: 20px;
  }
  h2 {
    border-bottom: 1px solid #ccc;
    padding-bottom: 5px;
  }
</style>
